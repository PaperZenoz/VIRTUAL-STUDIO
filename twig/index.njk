{% set page = { title: 'Ссылки' } %}
{% extends "./2.parts/main.njk" %}



{% block content %}

    <style>

        .ancors .btn {
            max-width: 100%;
            width: 100%;
            justify-content: flex-start;
            color: white;
            margin-bottom: 10px;
            display: flex;
            border-radius: 0;
        }
    </style>

    {% set  list = [{
        title: 'Моя страница',
        subtitle: 'my-page'
    }, {
        title: 'Площадки',
        subtitle: 'platforms'
    }, {
        title: 'Документы',
        subtitle: 'documents'
    }, {
        title: 'Академия',
        subtitle: 'academy'
    }, {
        title: 'Академия (подробная)',
        subtitle: 'academy-page'
    }, {
        title: 'Инструменты',
        subtitle: 'instruments'
    }, {
        title: 'Статистика и выплаты',
        subtitle: 'payments'
    }] %}

    <h2 class="h2">Страницы</h2>
    <div class="ancors section section--no-top">
        {% for item in list %}
            <a href="{{ item.subtitle }}.html" class="btn btn--second btn--bg"
               style="width: 100%">{{ item.title }}</a>
        {% endfor %}
    </div>
    <h2 class="h2">Всплывающие окна</h2>



{% endblock content %}